---
/**
 * Contact Page
 * ============
 * Contact page with React form and contact information.
 * CUSTOMIZE: Update the description, location, and response time details.
 */

import Layout from "@/layouts/Layout.astro";
import PageBackground from "@/components/PageBackground.astro";
import AnimatedSection from "@/components/AnimatedSection.astro";
import SectionConnector from "@/components/SectionConnector.astro";
import ContactForm from "@/components/ContactForm.tsx";

// Page metadata
const title = "Contact";
const description =
  "Have a project in mind? Get in touch and we'll get back to you within 24 hours on business days.";
---

<Layout title={title} description={description}>
  <PageBackground>
    <main>
      <!-- ================================================================
           HERO SECTION: Page introduction with decorative elements
      ================================================================= -->
      <section class="relative pt-24 pb-16 lg:pt-32 lg:pb-20 overflow-hidden">
        <!-- Decorative gradient blobs -->
        <div
          class="absolute -top-8 right-[10%] w-48 h-48 md:w-72 md:h-72 bg-linear-to-br from-emerald-200/30 dark:from-emerald-800/15 to-teal-100/20 dark:to-teal-900/10 rounded-full blur-3xl pointer-events-none"
          aria-hidden="true"
        />
        <div
          class="absolute top-12 left-[5%] w-32 h-32 md:w-48 md:h-48 bg-linear-to-tr from-amber-100/40 dark:from-amber-900/20 to-orange-100/30 dark:to-orange-900/15 rounded-full blur-2xl pointer-events-none"
          aria-hidden="true"
        />

        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
          <AnimatedSection animation="fade-up">
            <div class="text-center max-w-3xl mx-auto">
              <p class="text-sm font-medium uppercase tracking-wider text-emerald-600 dark:text-emerald-400 mb-4">
                Get in Touch
              </p>
              <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-gray-100 mb-6">
                Ready to start your <span class="text-emerald-600 dark:text-emerald-400">project</span>?
              </h1>
              <p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 leading-relaxed max-w-2xl mx-auto">
                Whether you have a specific project in mind or you're just exploring
                options, we'd love to hear from you. No pressure — just a friendly conversation.
              </p>
            </div>
          </AnimatedSection>
        </div>
      </section>

      <!-- Visual connector: Hero → Form -->
      <SectionConnector variant="wave" color="warm" />

      <!-- ================================================================
           MAIN CONTENT: Form and contact info
      ================================================================= -->
      <section class="py-16 lg:py-24 bg-linear-to-b from-amber-50/30 dark:from-amber-950/30 to-white dark:to-gray-950">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
          <AnimatedSection animation="fade-up" delay={100}>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
              <!-- Contact Form Section -->
              <div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-800 p-6 md:p-8">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-2">Tell us what's going on</h2>
                <p class="text-gray-600 dark:text-gray-400 mb-6">Describe your situation and we'll figure out the rest.</p>
                <ContactForm client:visible />
              </div>

              <!-- Contact Info Section -->
              <div class="space-y-6">
                <div>
                  <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">Other ways to reach us</h2>
                  <div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-800 p-6 space-y-6">
                    <!-- Location -->
                    <div class="flex items-start gap-4">
                      <div class="w-12 h-12 rounded-xl bg-linear-to-br from-emerald-100 dark:from-emerald-900 to-teal-50 dark:to-teal-950 flex items-center justify-center shrink-0">
                        <svg
                          class="w-6 h-6 text-emerald-600 dark:text-emerald-400"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                          aria-hidden="true"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                          ></path>
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                          ></path>
                        </svg>
                      </div>
                      <div>
                        <h3 class="font-semibold text-gray-900 dark:text-gray-100">Location</h3>
                        <!-- CUSTOMIZE: Update your location -->
                        <p class="text-gray-600 dark:text-gray-400">Your City, USA</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Remote-friendly — we work with clients anywhere</p>
                      </div>
                    </div>

                    <!-- Response Time -->
                    <div class="flex items-start gap-4">
                      <div class="w-12 h-12 rounded-xl bg-linear-to-br from-emerald-100 dark:from-emerald-900 to-teal-50 dark:to-teal-950 flex items-center justify-center shrink-0">
                        <svg
                          class="w-6 h-6 text-emerald-600 dark:text-emerald-400"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                          aria-hidden="true"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                          ></path>
                        </svg>
                      </div>
                      <div>
                        <h3 class="font-semibold text-gray-900 dark:text-gray-100">Response Time</h3>
                        <p class="text-gray-600 dark:text-gray-400">Within 24 hours on business days</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">We read every message and reply with a real answer, not a template</p>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Helpful Tip -->
                <div class="bg-linear-to-br from-amber-50 dark:from-amber-950 to-orange-50/50 dark:to-orange-950/50 rounded-2xl p-6 border border-amber-100/50 dark:border-amber-800/50">
                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-lg bg-amber-100 dark:bg-amber-900 flex items-center justify-center shrink-0">
                      <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-bold text-gray-900 dark:text-gray-100 mb-2">Not sure where to start?</h3>
                      <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
                        No worries—just describe your situation. We'll figure out the rest. If you want to browse first, check our{" "}
                        <a href="/pricing/" class="text-emerald-600 dark:text-emerald-400 hover:underline font-medium">
                          pricing
                        </a>.
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </AnimatedSection>
        </div>
      </section>

      <!-- Visual connector to footer -->
      <SectionConnector variant="gradient-fade" color="cool" />
    </main>
  </PageBackground>
</Layout>
