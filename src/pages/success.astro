---
/**
 * Success Page
 * ============
 * Contact form success confirmation page.
 */

import Layout from "@/layouts/Layout.astro";
import PageBackground from "@/components/PageBackground.astro";
import AnimatedSection from "@/components/AnimatedSection.astro";
import SectionConnector from "@/components/SectionConnector.astro";

const title = "Thanks!";
const description = "Your message is on its way. We'll be in touch soon.";
import { SITE } from "@/data/site";
const siteUrl = SITE.url;
---

<Layout title={title} description={description} noindex={true}>
  <PageBackground>
    <main>
      <!-- ================================================================
           HERO SECTION: Success confirmation with decorative elements
      ================================================================= -->
      <section class="relative pt-24 pb-16 lg:pt-32 lg:pb-20 overflow-hidden">
        <!-- Decorative gradient blobs -->
        <div
          class="absolute -top-8 right-[12%] w-40 h-40 md:w-64 md:h-64 bg-linear-to-br from-green-200/30 dark:from-green-800/15 to-emerald-100/20 dark:to-emerald-900/10 rounded-full blur-3xl pointer-events-none"
          aria-hidden="true"
        />
        <div
          class="absolute top-16 left-[8%] w-32 h-32 md:w-48 md:h-48 bg-linear-to-tr from-teal-100/30 dark:from-teal-900/15 to-cyan-100/20 dark:to-cyan-900/10 rounded-full blur-2xl pointer-events-none"
          aria-hidden="true"
        />

        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
          <AnimatedSection animation="fade-up">
            <div class="text-center">
              <!-- Success Icon -->
              <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-linear-to-br from-green-100 dark:from-green-900 to-emerald-50 dark:to-emerald-950 flex items-center justify-center shadow-sm border border-green-100 dark:border-green-800">
                <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>

              <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-4">We got your message</h1>
              <p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 max-w-lg mx-auto leading-relaxed">
                Thanks for reaching out. We usually reply within a day, often sooner.
                Already thinking about how we can help.
              </p>
            </div>
          </AnimatedSection>
        </div>
      </section>

      <!-- Visual connector: Hero → Next Steps -->
      <SectionConnector variant="wave" color="warm" />

      <!-- ================================================================
           NEXT STEPS SECTION: Explore while waiting
      ================================================================= -->
      <section class="py-16 lg:py-20 bg-linear-to-b from-amber-50/30 dark:from-amber-950/30 to-white dark:to-gray-950">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
          <AnimatedSection animation="fade-up" delay={100}>
            <div class="text-center mb-8">
              <div class="inline-flex items-center gap-2 mb-2">
                <div class="w-8 h-8 rounded-lg bg-amber-100 dark:bg-amber-900 flex items-center justify-center">
                  <svg class="w-4 h-4 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                  </svg>
                </div>
                <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100">While you wait</h2>
              </div>
              <p class="text-gray-600 dark:text-gray-400">Poke around if you'd like:</p>
            </div>

            <div class="grid gap-4 sm:grid-cols-3">
              <a href="/blog/" class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-800 p-4 flex items-center gap-4 hover:shadow-md hover:border-emerald-100 dark:hover:border-emerald-800 transition-all group">
                <div class="w-12 h-12 rounded-xl bg-linear-to-br from-emerald-100 dark:from-emerald-900 to-teal-50 dark:to-teal-950 flex items-center justify-center shrink-0">
                  <svg class="w-6 h-6 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-gray-100 group-hover:text-emerald-600 transition-colors">Insights & Strategy</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400">Read our latest thoughts</p>
                </div>
              </a>

              <a href="/services/" class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-800 p-4 flex items-center gap-4 hover:shadow-md hover:border-emerald-100 dark:hover:border-emerald-800 transition-all group">
                <div class="w-12 h-12 rounded-xl bg-linear-to-br from-amber-100 dark:from-amber-900 to-orange-50 dark:to-orange-950 flex items-center justify-center shrink-0">
                  <svg class="w-6 h-6 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-gray-100 group-hover:text-emerald-600 transition-colors">Our Services</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400">Discover how we help</p>
                </div>
              </a>

              <a href="/about/" class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-800 p-4 flex items-center gap-4 hover:shadow-md hover:border-emerald-100 dark:hover:border-emerald-800 transition-all group">
                <div class="w-12 h-12 rounded-xl bg-linear-to-br from-teal-100 dark:from-teal-900 to-cyan-50 dark:to-cyan-950 flex items-center justify-center shrink-0">
                  <svg class="w-6 h-6 text-teal-600 dark:text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-gray-100 group-hover:text-emerald-600 transition-colors">About Us</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400">Learn who we are</p>
                </div>
              </a>
            </div>
          </AnimatedSection>
        </div>
      </section>

      <!-- Visual connector: Next Steps → Share -->
      <SectionConnector variant="curve" color="neutral" />

      <!-- ================================================================
           SHARE SECTION: Spread the word
      ================================================================= -->
      <section class="py-16 lg:py-20">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
          <AnimatedSection animation="fade-up" delay={150}>
            <div class="bg-linear-to-br from-emerald-50 dark:from-emerald-950 to-teal-50/50 dark:to-teal-950/50 rounded-2xl p-8 border border-emerald-100/50 dark:border-emerald-800/50 text-center">
              <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-2">Know someone who needs this?</h2>
              <p class="text-gray-600 dark:text-gray-400 mb-6">Feel free to share.</p>

              <div class="flex flex-wrap justify-center gap-3">
                <a
                  href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(siteUrl)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-[#0077B5] text-white hover:bg-[#0077B5]/90 transition-colors shadow-sm"
                  aria-label="Share on LinkedIn"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                  LinkedIn
                </a>

                <a
                  href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(siteUrl)}&text=${encodeURIComponent('Check out ' + SITE.title)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-[#1DA1F2] text-white hover:bg-[#1DA1F2]/90 transition-colors shadow-sm"
                  aria-label="Share on Twitter"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                  Twitter
                </a>

                <a
                  href={`mailto:?subject=${encodeURIComponent('Check out ' + SITE.title)}&body=${encodeURIComponent('I thought you might find this helpful: ' + siteUrl)}`}
                  class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
                  aria-label="Share via Email"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  Email
                </a>
              </div>
            </div>
          </AnimatedSection>
        </div>
      </section>

      <!-- Visual connector to footer -->
      <SectionConnector variant="gradient-fade" color="cool" />

      <!-- ================================================================
           RETURN ACTIONS
      ================================================================= -->
      <section class="py-12 bg-linear-to-b from-emerald-50/20 dark:from-emerald-950/20 to-white dark:to-gray-950">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-emerald-600 text-white hover:bg-emerald-700 transition-colors font-semibold shadow-sm">
              Return Home
            </a>
            <a href="/blog/" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 text-gray-900 dark:text-gray-100 hover:bg-gray-50 dark:hover:bg-gray-800 hover:border-gray-300 dark:hover:border-gray-600 transition-colors font-semibold shadow-sm">
              Read Our Blog
            </a>
          </div>
        </div>
      </section>
    </main>
  </PageBackground>
</Layout>
